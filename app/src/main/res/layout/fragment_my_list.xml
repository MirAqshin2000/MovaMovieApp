<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".screen.mylist.MyListFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mylistcons"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="78dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView28"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/logo"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3List"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/urbanist_bold"
            android:text="My List"
            android:textColor="@color/textPrimary1"
            android:textSize="48sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView28"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:visibility="gone"
        app:boxBackgroundColor="@color/backgroundColor"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxStrokeColor="@color/selector_inputlayout"
        app:boxStrokeWidth="2dp"

        app:hintEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/mylistcons"
        app:layout_constraintEnd_toStartOf="@+id/imageViewserch"
        app:layout_constraintStart_toStartOf="@+id/mylistcons"
        app:layout_constraintTop_toTopOf="@+id/mylistcons"
        app:startIconDrawable="@drawable/search_xml">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchedittext1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search"

            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/textPrimary1"
            android:textColorHint="@color/textPrimary1" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageViewserch"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/searchhome"
        app:layout_constraintBottom_toBottomOf="@+id/mylistcons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mylistcons"
        app:tint="@color/icon_color" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMylist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mylistcons"
        tools:listitem="@layout/item_mylist" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView22"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mylistcons"
        app:lottie_autoPlay="true"
        app:lottie_colorFilter="@color/red"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading" />

    <TextView
        android:id="@+id/textView74notfound"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/urbanist"
        android:text="It seems that you haven't added
any movies to the list"
        android:textAlignment="center"
        android:textColor="@color/textPrimary1"
        android:textSize="30dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView75sorry" />

    <TextView
        android:id="@+id/textView75sorry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/urbanist_bold"
        android:text="Your List is Empty:("
        android:textColor="@color/red"
        android:textSize="35dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/imageView69list"
        app:layout_constraintStart_toStartOf="@+id/imageView69list"
        app:layout_constraintTop_toBottomOf="@+id/imageView69list" />

    <ImageView
        android:id="@+id/imageView69list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:src="@drawable/listempty"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mylistcons" />


</androidx.constraintlayout.widget.ConstraintLayout>